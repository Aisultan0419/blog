    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{user_token}}",
        "type": "string"
      }
    ]
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "console.log('Request URL:', pm.request.url);",
          "console.log('Request Method:', pm.request.method);",
          "",
          "// Auto-set token based on request type",
          "if (pm.request.url.toString().includes('/admin/')) {",
          "    pm.request.headers.add({ key: 'Authorization', value: 'Bearer {{admin_token}}' });",
          "} else if (!pm.request.url.toString().includes('/auth/')) {",
          "    pm.request.headers.add({ key: 'Authorization', value: 'Bearer {{user_token}}' });",
          "}"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "pm.test('Status code is expected', function() {",
          "    const url = pm.request.url.toString();",
          "    let expectedStatus = 200;",
          "    ",
          "    if (url.includes('Validation') || url.includes('Authorization')) {",
          "        expectedStatus = [400, 401, 403];",
          "    }",
          "    ",
          "    if (Array.isArray(expectedStatus)) {",
          "        pm.expect(expectedStatus).to.include(pm.response.code);",
          "    } else {",
          "        pm.response.to.have.status(expectedStatus);",
          "    }",
          "});",
          "",
          "pm.test('Response time is acceptable', function() {",
          "    pm.expect(pm.response.responseTime).to.be.below(1000);",
          "});",
          "",
          "pm.test('Response has JSON body', function() {",
          "    pm.response.to.be.json;",
          "});",
          "",
          "// Additional tests for specific endpoints",
          "if (pm.response.code === 200) {",
          "    const response = pm.response.json();",
          "    ",
          "    if (pm.request.url.toString().includes('/auth/me')) {",
          "        pm.test('User response has required fields', function() {",
          "            pm.expect(response.user).to.have.property('id');",
          "            pm.expect(response.user).to.have.property('email');",
          "            pm.expect(response.user).to.not.have.property('password');",
          "        });",
          "    }",
          "    ",
          "    if (pm.request.url.toString().includes('/health')) {",
          "        pm.test('Health check returns system info', function() {",
          "            pm.expect(response).to.have.property('status', 'OK');",
          "            pm.expect(response).to.have.property('uptime');",
          "            pm.expect(response).to.have.property('collections');",
          "        });",
          "    }",
          "}"
        ]
      }
    }
  ]
}